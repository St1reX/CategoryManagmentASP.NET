@model Category
@{
    ViewData["Title"] = "Edit Category";
}


<form method="post" asp-action="DeletePOST">
    <div class="mt-4 p-4 border border-primary">
        <h2 class="text-primary">Delete Category</h2>


        <input asp-for="Id" hidden />
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control disabled border-black" />
        <br />
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" disabled class="form-control disabled border-black" />
        <br />
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">Go back to categories</a>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

