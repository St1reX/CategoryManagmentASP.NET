@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary float-end"><i class="bi bi-file-earmark-plus-fill"></i> &nbsp; Create New</a>
        </div>
    </div>
</div>
<br />

<table class="table table-hover w-100">
    <thead class="w-100">
        <tr class="table-dark">
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr class="table-primary">
                <td style="width: 50%">@category.Name</td>
                <td style="width: 30%">@category.DisplayOrder</td>
                <td>
                    <div class="w-100 btn-group text-end" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning"><i class="bi bi-pencil"></i> Edit</a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

