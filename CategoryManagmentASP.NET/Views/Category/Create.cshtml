@model Category
@{
    ViewData["Title"] = "Create Category";
}


<form method="post">
    <div class="mt-4 p-4 border border-primary">
        <h2 class="text-primary">Category Add</h2>

        <div asp-validation-summary="All"></div>

        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control border-black" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <br />
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder" class="form-control border-black" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        <br />
        <button type="submit" class="btn btn-primary">Add</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">Go back to categories</a>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

